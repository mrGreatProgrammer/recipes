generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
}

enum Role {
  ADMIN
  USER
}

model Image {
  id     Int    @id @default(autoincrement())
  link   String
  altTxt String
  recepy Recepy? @relation(fields: [recepyId], references: [id])
  recepyId Int?
}

model Recepy {
  id           Int                @id @default(autoincrement())
  name         String
  description  String
  cookTimer    String
  kkal         Float
  fat          Float
  carbs        Float
  protein      Float
  totalWeight  Float
  categories   String[]
  images       Image[]
  ingredients  IngredientsRecepy[]

  createdAt DateTime   @default(now())
}

model IngredientsRecepy {
  id          Int         @id @default(autoincrement())
  weight      Float?
  count       Int?
  ingredient  Ingredient  @relation(fields: [ingredientId], references: [id])
  ingredientId Int
  recepy      Recepy      @relation(fields: [recepyId], references: [id])
  recepyId    Int
}

model Ingredient {
  id   Int    @id @default(autoincrement())
  name String
  slug String
  ingredientsRecepy IngredientsRecepy[]
}